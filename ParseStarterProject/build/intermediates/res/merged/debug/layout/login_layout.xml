<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="40dp"
        android:textSize="30dp"
        android:text="Login"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/enter_username_textfield"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:hint="Enter email"
        android:background="@android:color/background_light"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:autoText="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:elevation="2dp"
        android:layout_alignParentTop="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/enter_password_textfield"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:hint="Enter password"
        android:background="@android:color/background_light"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:autoText="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:elevation="2dp"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/login_go_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:text="Log in!"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="40dp"
        android:textSize="30dp"
        android:text="Signup"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/create_username_textfield"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:hint="Add email"
        android:background="@android:color/background_light"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:autoText="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:elevation="2dp"
        android:layout_alignParentTop="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/create_password_textfield"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:hint="Create password"
        android:background="@android:color/background_light"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:autoText="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:elevation="2dp"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/signup_go_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:text="Sign Up!"/>

</LinearLayout><!-- From: file:/Users/yinggao/time-track/Parse-Starter-Project-1.10.2/ParseStarterProject/src/main/res/layout/login_layout.xml -->